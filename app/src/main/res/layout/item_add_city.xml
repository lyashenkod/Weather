<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/ic_city"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_marginBottom="@dimen/small"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginTop="@dimen/small"
        android:src="@drawable/city1"/>


    <TextView
        android:id="@+id/city_name_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginTop="@dimen/small"
        android:layout_toRightOf="@+id/ic_city"
        android:text="@string/city_caption"
        android:textColor="@color/heading_blue"
        android:textSize="@dimen/text_normal"/>

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small"
        android:layout_marginTop="@dimen/small"
        android:layout_toRightOf="@+id/city_name_caption"
        android:textColor="@color/heading_blue"
        android:textSize="@dimen/text_normal"/>

    <TextView
        android:id="@+id/country_name_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_name_caption"
        android:layout_marginLeft="@dimen/small"
        android:layout_toRightOf="@+id/ic_city"
        android:text="@string/country_caption"
        android:textColor="@color/heading_blue"
        android:textSize="@dimen/text_normal"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_name_caption"
        android:layout_marginRight="@dimen/small"
        android:layout_toRightOf="@+id/country_name_caption"
        android:textColor="@color/heading_blue"
        android:textSize="@dimen/text_normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/ic_city"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginRight="@dimen/small"
        android:background="@drawable/drop_shadow"/>

</RelativeLayout>
